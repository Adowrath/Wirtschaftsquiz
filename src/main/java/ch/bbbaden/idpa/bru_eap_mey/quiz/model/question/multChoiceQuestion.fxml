<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="190.0" prefWidth="470.0"
	xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="ch.bbbaden.idpa.bru_eap_mey.quiz.controllers.MultChoiceController">
	<children>
		<Label layoutX="14.0" layoutY="14.0" prefHeight="30.0"
			prefWidth="64.0" text="Frage:">
			<font>
				<Font size="20.0" />
			</font>
		</Label>
		<Label fx:id="questionText" layoutX="72.0" layoutY="14.0"
			prefHeight="30.0" prefWidth="398.0">
			<font>
				<Font size="20.0" />
			</font>
		</Label>
		<HBox alignment="CENTER" layoutX="0.0" layoutY="45.0" maxHeight="100.0"
			maxWidth="470.0" minHeight="100.0" minWidth="470.0" prefHeight="100.0"
			prefWidth="470.0">
			<children>
				<VBox alignment="CENTER" minWidth="-Infinity" prefWidth="120.0"
					HBox.hgrow="SOMETIMES">
					<children>
						<RadioButton fx:id="radioButton1" mnemonicParsing="false"
							text="Antwort 1" textAlignment="CENTER" VBox.vgrow="ALWAYS">
							<toggleGroup>
								<ToggleGroup fx:id="antwort" />
							</toggleGroup>
							<VBox.margin>
								<Insets bottom="10.0" top="10.0" />
							</VBox.margin>
						</RadioButton>
						<RadioButton fx:id="radioButton2" mnemonicParsing="false"
							text="Antwort 2" textAlignment="CENTER" toggleGroup="$antwort"
							VBox.vgrow="ALWAYS">
							<VBox.margin>
								<Insets bottom="10.0" top="10.0" />
							</VBox.margin>
						</RadioButton>
					</children>
					<padding>
						<Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
					</padding>
				</VBox>
				<VBox alignment="CENTER" minWidth="-Infinity" prefWidth="120.0"
					HBox.hgrow="SOMETIMES">
					<children>
						<RadioButton fx:id="radioButton3" mnemonicParsing="false"
							text="Antwort 3" textAlignment="CENTER" toggleGroup="$antwort"
							VBox.vgrow="ALWAYS">
							<VBox.margin>
								<Insets bottom="10.0" top="10.0" />
							</VBox.margin>
						</RadioButton>
						<RadioButton fx:id="radioButton4" mnemonicParsing="false"
							text="Antwort 4" textAlignment="CENTER" toggleGroup="$antwort"
							VBox.vgrow="ALWAYS">
							<VBox.margin>
								<Insets bottom="10.0" top="10.0" />
							</VBox.margin>
						</RadioButton>
					</children>
					<padding>
						<Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
					</padding>
				</VBox>
			</children>
		</HBox>
		<Button layoutX="78.0" layoutY="152.0" mnemonicParsing="false"
			onAction="#accept" text="Weiter" />
		<Button layoutX="337.0" layoutY="152.0" mnemonicParsing="false"
			onAction="#cancel" text="Abbrechen" />
	</children>
</AnchorPane>